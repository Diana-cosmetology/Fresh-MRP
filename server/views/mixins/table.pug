mixin erpTable(header, aList)
    .content
        .row
            .col-md-12
                .card
                    if aList && aList.length > 0
                        .card-header
                            h3=header
                            button.btn.btn-primary.btn-round#btn-new(data-url="/erp/manufacturing/" data-toggle='modal' data-target='#editModal')
                                i.now-ui-icons.ui-1_simple-add
                                span  New
                        .card-body
                            .table-responsive
                                table.table
                                    if block
                                        block
                    else
                        .card-header
                            h3=header
                            h6.card-subtitle.text-muted.mb-2 List is empty
                        .card-body
                            a.btn.btn-primary.btn-round(href='/') < Main page
